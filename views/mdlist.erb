<tbody id="list">
<% if @numofmd == 0 %>
  <tr>
    <td colspan="3">no markdown records</td>
  </tr>
<% else %>
  <% @mdlist.each do |item| %>
    <% if item.id == @after %>
  <tr class="bg-info mdiff-tr mdiff-after" id="<%= item.id %>">
    <td>
      <div class="btn-group">
        <button class="btn btn-outline-warning mdiff-select-before disabled" id="<%= item.id %>" disabled>before</button>
        <button class="btn btn-warning mdiff-select-after disabled" id="<%= item.id %>" disabled>after</button>
    <% elsif item.id == @before %>
  <tr class="bg-danger mdiff-tr mdiff-before" id="<%= item.id %>">
    <td>
      <div class="btn-group">
        <button class="btn btn-warning mdiff-select-before disabled" id="<%= item.id %>" disabled>before</button>
        <button class="btn btn-outline-warning mdiff-select-after disabled" id="<%= item.id %>" disabled>after</button>
    <% else %>
  <tr class="mdiff-tr" id="<%= item.id %>">
    <td>
      <div class="btn-group">
        <button class="btn btn-outline-warning mdiff-select-before" id="<%= item.id %>">before</button>
        <button class="btn btn-outline-warning mdiff-select-after" id="<%= item.id %>">after</button>
    <% end %>
      </div>
    </td>
    <td><%= item.created_at.in_time_zone('Asia/Tokyo').strftime("%Y-%m-%d %H:%M:%S") %></td>
    <td class="text-right">
      <div class="btn-group">
        <button class="btn btn-outline-secondary mdiff-preview" data-toggle="modal" data-target="#preview-modal" id="<%= item.id %>">preview</button>
      </div>
      <div class="btn-group">
        <button class="btn btn-outline-secondary mdiff-edit" data-toggle="modal" data-target="#edit-modal" id="<%= item.id %>">edit</button>
      </div>
      <div class="btn-group">
        <button class="btn btn-outline-secondary mdiff-delete" data-toggle="modal" data-target="#delete-modal" id="<%= item.id %>">delete</button>
      </div>
    </td>
  </tr>
  <% end %>
<% end %>
</tbody>
